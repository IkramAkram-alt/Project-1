<h1>Contacts info</h1>
<p id="notice"><%= notice %></p>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>Phone</th>
      <th>Email</th>
    </tr>
  </thead>

  <tbody>
    <% @contacts.each do |c| %>
      <tr>
        <td><%= c.name %></td>
        <td><%= c.address%></td>
        <td><%= c.phone %></td>
        <td><%= c.email%></td>
        <td><%= link_to 'Show', contact_path(c.id) %></td>
        <td><%= link_to 'Edit', edit_contact_path(c) %></td>
        <td><%= link_to 'Delete', contact_path(c.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>

<%= link_to 'New Contact', new_contact_path %>
